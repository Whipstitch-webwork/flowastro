---
interface Props {
    title:string,
    subtitle: string
}

const {title, subtitle} = Astro.props;
---

<h2><span class="text-gradient" >{title} </span>{subtitle}</h2>



<style>
h2{
    font-size: clamp(1rem, -1.5rem + 8vw, 3rem);
	margin-top: -15rem;
	margin-bottom: 1rem ;
	color: white;
	font-weight:700
}
.text-gradient {
		background-image: linear-gradient(180deg, #fafdfff8, #0b68aade);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
		font-weight: 900;
	}
	
</style>