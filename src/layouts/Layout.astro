---
import { ThemeModeScript } from "flowbite-react";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ThemeModeScript />
	</head>
	<body>

		<nav>
			<h3 class="matthewc" >Whipstitch</h3>
			<div class="links">
				<ol>
					<!-- <li><a aria-label="Start here" href="/">Start Here</a></li> -->
					<li><a aria-label="Our design system" href="/contact">Our Design System</a></li>
					<!-- <li><a aria-label="Get a blazing site" href="/contact">Get a Blazing Site </a></li>
					 -->
				</ol>
			</div>

		</nav>
		<slot />
		
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			#fafdfff8,
			#0b68aade 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	nav{
		position: absolute;
		background: transparent;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 15px;
		width: 100vw;
	}
	h3{
		font-size: clamp(.85rem, -1.5rem + 8vw, 1rem);
		font-weight: 900;
		
		
	}
	.links{
		display: flex;
		width: 90vw;
		justify-content: end;
		font-size: clamp(.85rem, -1.5rem + 8vw, 1rem);

		
	}
	ol{
		display: flex;
	}
	a{
		color: white;
		
		font-weight: 700;
	}
	a:hover{
		color:#558aaf;
	}
	h3.matthewc {
		background-image: linear-gradient(180deg, #fafdfff8, #0b68aade);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
		font-size: clamp(.85rem, -1.5rem + 8vw, 1.25rem);
	}
</style>
